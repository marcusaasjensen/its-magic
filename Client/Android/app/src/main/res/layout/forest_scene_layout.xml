<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary">

    <ImageView
        android:id="@+id/sunCycleImg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="sun watch cycle"
        android:src="@drawable/sun_cycle_watch"
        app:layout_constraintBottom_toTopOf="@id/BottomLayer"
        app:layout_constraintEnd_toStartOf="@id/RightLayer"
        app:layout_constraintStart_toEndOf="@id/leftLayer"
        app:layout_constraintTop_toBottomOf="@id/topLayer" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:maxHeight="@android:dimen/thumbnail_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftLayer"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:maxHeight="@android:dimen/thumbnail_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/RightLayer"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:maxHeight="@android:dimen/thumbnail_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/BottomLayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:maxHeight="@android:dimen/thumbnail_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/lightTextView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

